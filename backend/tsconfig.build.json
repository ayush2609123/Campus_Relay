{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "CommonJS",
      "target": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts", "node_modules", "dist"]
  }
  